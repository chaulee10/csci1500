#include <iostream>
using namespace std;

struct Point {
    double x,y;
};
Point mid(Point a, Point b);

int main()
{
    Point c,d;
    
    Point midpoint;
    char com, ans;
    do
    {
        cout <<"Enter 1st point ";
        cin >> c.x >> com >> c.y;
        cout <<"Enter 2nd point: ";
        cin >> d.x >> com >> d.y;
        midpoint = mid(c,d);
        cout <<"Mid point is (" << midpoint.x << "," << midpoint.y << ")";
        cout <<"\nContinue? ";
        cin >> ans;
    }while(ans == 'y');
    return 0;
}

Point mid(Point a, Point b)
{   
    Point formula;
    formula.x = (a.x + b.x)/2.0;
    formula.y = (a.y + b.y)/2.0;
    return formula;
}
