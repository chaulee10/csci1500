#include <iostream>
#include <cmath>
using namespace std;

struct Point 
{
    double x, y;
};

Point mid(Point A, Point B);

int main()
{	
    Point a,b;
    char ok,c;

    do
    {
        cout <<"Enter 1st point (x,y): " ;
        cin >> c >>  a.x >> c >> a.y >> c;
        
        cout <<"Enter 2nd point (x,y): " ;
        cin >> c >>  a.y >> c >> b.y >> c; 
        
        cout << "Mid point is " << mid(a,b);
        
        cout <<"Continue ? ";
        cin >> ok;

    }while ( ok == 'y' || ok == 'Y');
    
	return 0;
}
Point mid(Point A, Point B)
{
    Point midPoint;
    midPoint.x = (A.x+B.x)/2 
    midPoint.y= (A.y+B.y)/2;
    return midPoint;
}
