#include <iostream>
#include <string>
using namespace std;

int main()
{
    string name[10];
    double price[10];
    double low = 9999999;

    cout <<"Enter stores: ";
    for (int i=0; i<3; i++)
    {
        cin >> name[i];
    }
    cout <<"Enter prices ";
    for (int j=0; j<3; j++)
    {
        cin >> price[j];
        if (price[j] < low)
        {
            price[j] = low;
        }
    }

    cout <<"The stores with lowest prices are: ";
    for (int k=0; k<3; k++)
    {
        if (price[k] == low)
        {
            cout << name[k] << endl;
        }
    }

    cout <<"The stores with lowest prices + 10% are: ";
    for (int h=0; h<3; h++)
    {
        if (price[h] == (low + low*0.1))
        {
            cout << name[h] << " with prices of " << price[h] << endl;
        }
    }
}
