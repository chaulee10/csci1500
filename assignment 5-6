#include <iostream>
using namespace std;

struct time
{
    int hr, min,sec;
};
struct time sum (struct time time_1,struct time time_2);

int main()
{
    struct time first, second;
    struct time variable;
    char a;

    cout <<"Enter the 1st time: ";
    cin >> first.hr >> a >>first.min >> a >>first.sec;
    cout <<"Enter the second time: ";
    cin >> second.hr >> a  >>second.min >> a >>second.sec;
    variable = sum(first, second);
    cout <<"Sum of times: " ;
    cout << variable.hr <<":" << variable.min<<":"<<variable.sec;
}

struct time sum (struct time time_1,struct time time_2)
{
    struct time final;
    final.sec = (time_1.sec + time_2.sec)%60;
    final.min = ((time_1.min + time_2.min)%60 ) +  (time_1.sec + time_2.sec)/60;
    final.hr = (time_1.hr + time_2.hr ) + (time_1.min + time_2.min)/60;
    return final;
}
