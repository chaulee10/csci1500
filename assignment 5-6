     min_sum = num1.minute+num2.minute+ sec_sum/60;
     hr_sum = num1.hour+num2.hour+min_sum/60;
     min_sum = min_sum %60;
     sec_sum = sec_sum % 60;

    cout <<"Sum of times = " << hr_sum << " : " << min_sum << " " << sec_sum <<endl;
